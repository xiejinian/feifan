{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)", 
      "destination": "server/server.js", 
      "handle": "filesystem"
    },
     {
      "source": "^/static/(.*)",
      "destination": "/build/static/$1",
    },
    {
      "source": "/favicon.ico",
      "destination": "/build/favicon.ico"
    },
    {
      "source": "/manifest.json",
      "destination": "/build/manifest.json"
    },
    {
      "source": "/(.*)", 
      "destination": "/index.html" 
    }
  ]
}
