{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)", 
      "destination": "server/server.js", 
      "handle": "filesystem"
    },
    {
      "source": "/(.*)", 
      "destination": "/index.html" 
    }
  ]
}
